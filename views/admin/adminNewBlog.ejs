<html>
<%- include header.ejs %>
    <body>
        <%- include adminNav.ejs %>
            <div class="container" style="padding: 30px;">
                <h1>New Blog</h1>
                <div class="form-group">
                    <form action="" method="post">
                        <label for="title">Title</label>
                        <input class="form-control" type="text" id="newBlogTitle" name="title" required>
                        <label for="">Date</label>
                        <input class="form-control" type="text" id="newBlogDate" name="date" required>
                        <label for="">Description</label>
                        <input class="form-control" type="text" id="newBlogDescription" name="description" required>
                        <label for="">Content</label>
                        <textarea class="form-control" rows=40 id="newBlogContent" name="content" required></textarea>
                        <input type="submit" class="form-control btn btn-primary" value="Save">
                    </form>
                </div>
            </div>
    </body>
</html>
